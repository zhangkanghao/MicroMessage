        <servlet-name>DeleteBatchServlet</servlet-name>
        <url-pattern>/DeleteBatchServlet.action</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InsertOneServlet</servlet-name>
        <servlet-class>com.chat.servlet.InsertOneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertOneServlet</servlet-name>
        <url-pattern>/InsertOneServlet.action</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddPageServlet</servlet-name>
        <servlet-class>com.chat.servlet.AddPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddPageServlet</servlet-name>
        <url-pattern>/AddPageServlet.action</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InitTalkServlet</servlet-name>
        <servlet-class>com.chat.servlet.InitTalkServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InitTalkServlet</servlet-name>
        <url-pattern>/InitTalkServlet.action</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AutoReplyServlet</servlet-name>
        <servlet-class>com.chat.servlet.AutoReplyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AutoReplyServlet</servlet-name>
        <url-pattern>/AutoReplyServlet.action</url-pattern>
    </servlet-mapping>
</web-app>