        <servlet-name>DeleteOneServlet</servlet-name>
        <url-pattern>/DeleteOneServlet.action</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteBatchServlet</servlet-name>
        <servlet-class>com.chat.servlet.DeleteBatchServlet</servlet-class>
    </servlet>
