        <servlet-class>com.chat.servlet.ListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListServlet</servlet-name>
        <url-pattern>/List.action</url-pattern>
    </servlet-mapping>

